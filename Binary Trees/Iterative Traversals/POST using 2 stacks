
#include <bits/stdc++.h>

using namespace std;

// POSTORDER TRAVERSAL USING 2 STACKS

// T.C. -> O(2N)
// S.C. -> O(2N)

struct Node
{
    int data; // value

    Node *l; // left child

    Node *r; // right child

    // parameterized constructor
    Node(int val)
    {
        data = val;
        l = r = nullptr;
    }
};

void insert(Node *&root, int value)
{
    if (root == nullptr)
    {
        root = new Node(value);
        return;
    }

    queue<Node *> q;
    q.push(root);

    while (!q.empty())
    {
        Node *current = q.front();
        q.pop();

        if (current->l == nullptr)
        {
            current->l = new Node(value);
            return;
        }

        else
        {
            q.push(current->l);
        }

        if (current->r == nullptr)
        {
            current->r = new Node(value);
            return;
        }

        else
        {
            q.push(current->r);
        }
    }
}

// POSTORDER TRAVERSAL
vector<int> postOrder(Node *root)
{
    vector<int> postorder;

    if (root == NULL)
    {
        return postorder;
    }

    stack<Node *> st1, st2;
    st1.push(root);

    while (!st1.empty())
    {

        root = st1.top();
        st1.pop();

        st2.push(root);

        if (root->l != nullptr)
        {
            st1.push(root->l);
        }

        if (root->r != nullptr)
        {
            st1.push(root->r);
        }
    }

    while (!st2.empty())
    {
        postorder.push_back(st2.top()->data);
        st2.pop();
    }

    return postorder;
}

void printVector(const vector<int> &vec)
{
    for (int num : vec)
    {
        cout << num << " ";
    }
    cout << endl;
}

int main()
{

    Node *root = nullptr;
    int n, value;

    cout << "Enter the number of nodes to insert -> ";
    cin >> n;

    for (int i = 0; i < n; ++i)
    {
        cout << "Enter the value for Node " << (i + 1) << " -> ";
        cin >> value;
        insert(root, value);
    }

    // POSTORDER
    vector<int> result = postOrder(root);
    cout << "Postorder Traversal :- " << endl;
    printVector(result);

    return 0;
}
