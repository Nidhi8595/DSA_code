
#include <bits/stdc++.h>

using namespace std;

// Checking whether the Binary Tree is Balanced or not

// Optimal

// T.C. -> O(N)
// S.C. -> O(1)

struct Node
{
    int data; // value

    Node *l; // left child

    Node *r; // right child

    // parameterized constructor
    Node(int val)
    {
        data = val;
        l = r = nullptr;
    }
};

// void insert(Node *&root, int value)
// {
