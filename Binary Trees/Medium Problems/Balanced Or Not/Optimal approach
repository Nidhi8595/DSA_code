//     queue<Node *> q;
//     q.push(root);

//     while (!q.empty())
//     {
//         Node *current = q.front();
//         q.pop();

//         if (current->l == nullptr)
//         {
//             current->l = new Node(value);
//             return;
//         }

//         else
//         {
//             q.push(current->l);
//         }

//         if (current->r == nullptr)
//         {
//             current->r = new Node(value);
//             return;
//         }

//         else
//         {
//             q.push(current->r);
//         }
//     }
// }

int HeightDiff(Node *root)
{
    // empty tree
    if (root == nullptr)
    {
        return 0;
    }

    // left subtree
    int leftHeight = HeightDiff(root->l);

    // check in case the left leftsubtree is unbalanced, if it's difference exceeds -1
    if (leftHeight == -1)
    {
        return -1;
    }

    // right subtree
    int rightHeight = HeightDiff(root->r);

    // check in case the right leftsubtree is unbalanced, if it's difference exceeds -1
    if (rightHeight == -1)
    {
        return -1;
    }

    //  difference bw left and right subtrees is greater than 1, the tree is unbalanced,
    if (abs(leftHeight - rightHeight) > 1)
    {
        return -1;
    }

    // Return the maximum height of left and
    // right subtrees, adding 1 for the current node
    return max(leftHeight, rightHeight) + 1;
}

bool isBalanced(Node *root)
{

    if (HeightDiff(root) != -1)
    {
        return true;
    }
    else
    {
        return false;
    }
}

int main()
{

    // Node *root = nullptr;
    // int n, value;

    // cout << "Enter the number of nodes to insert -> ";
    // cin >> n;

    // for (int i = 0; i < n; ++i)
    // {
    //     cout << "Enter the value for Node " << (i + 1) << " -> ";
    //     cin >> value;
    //     insert(root, value);
    // }

    Node *root = new Node(1);
    root->l = new Node(2);
    root->r = new Node(3);
    root->l->l = new Node(4);
    root->l->r = new Node(5);
    root->l->r->r = new Node(6);
    root->l->r->r->r = new Node(7);

    int ans = isBalanced(root);

    if (ans)
    {
        cout << "This is a Balanced Binary Tree" << endl;
    }
    else
    {
        cout << "Not a Balanced Binary Tree" << endl;
    }

    return 0;
}
