#include <iostream>
#include <vector>
using namespace std;

// You are given a 2D matrix mat[][] of size nÃ—m.
// The task is to modify the matrix such that if mat[i][j] is 0,
//  all the elements in the i-th row and j-th column are set to 0
//   and do it in constant space complexity.

// Examples:

// Input: mat[][] = [[1, -1, 1],
//                 [-1, 0, 1],
//                 [1, -1, 1]]

// Output: [[1, 0, 1],
//         [0, 0, 0],
//         [1, 0, 1]]

// Explanation: mat[1][1] = 0, so
// all elements in row 1 and column 1 are updated to zeroes.

// T.C. -> O(n*m)

void setMatrixZeroes(vector<vector<int>> &mat)
{
    int n = mat.size();
    int m = mat[0].size();
    int col0 = 1;

    // Step 1: Mark rows and columns
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            if (mat[i][j] == 0)
            {
                mat[i][0] = 0;
                if (j != 0)
                {
                    mat[0][j] = 0;
                }
                else
                {
                    col0 = 0;
                }
            }
        }
    }

    // Step 2: Update inner matrix elements
    for (int i = 1; i < n; i++)
    {
        for (int j = 1; j < m; j++)
        {
            if (mat[i][j] != 0)
            {
                if (mat[i][0] == 0 || mat[0][j] == 0)
                {
                    mat[i][j] = 0;
                }
            }
        }
    }

    // Step 3: Update the first row
    if (mat[0][0] == 0)
    {
        for (int j = 0; j < m; j++)
        {
            mat[0][j] = 0;
        }
    }

    // Step 4: Update the first column
    if (col0 == 0)
    {
        for (int i = 0; i < n; i++)
        {
            mat[i][0] = 0;
        }
    }
}

int main()
{
    int n, m;
    cout << "Enter the number of rows and columns: ";
    cin >> n >> m;

    vector<vector<int>> mat(n, vector<int>(m));

    cout << "Enter the matrix elements:\n";
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            cin >> mat[i][j];
        }
    }

    setMatrixZeroes(mat);

    cout << "Matrix after setting zeroes:\n";
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            cout << mat[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
