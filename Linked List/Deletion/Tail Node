#include <bits/stdc++.h>
using namespace std;

class Node
{
public:
    int data;   // to store value
    Node *next; /* since we will store the address of next node
    thats why we are declaring a pointer of datatype "Node" */
public:
    /* now we will define constructor to create objects of class Node */
    Node(int data1, Node *next1)
    {
        data = data1;
        next = next1;
    }
    Node(int data1) // second constructor
    {
        data = data1;
        next = nullptr;
    }
};

Node *convert(int n, int arr[])
{
    Node *head = new Node(arr[0]); // creting first node
    Node *move = head;             // initially will point to head pointer
    for (int i = 1; i < n; i++)
    {
        Node *temp = new Node(arr[i]); // creating other nodes
        move->next = temp;             // now move points to new temporary node we have created
        move = temp;                   // or move=move->next;// now move pointer moves to next node
    }
    return head; // returning the address of first node of Linked list we have created
}

void print(Node *temp)
{
    cout << "The elements in the Linked List are -> ";
    while (temp != NULL)
    {
        cout << temp->data << " ";
        temp = temp->next;
    }
    cout << endl;
}

Node *deleteTail(Node *head)
{
    if ((head == nullptr) || (head->next == nullptr)) // either the LL is empty or contains only one element
    {
        return nullptr;
    }
    Node *temp = head;
    while (temp->next->next != nullptr) // check from the second last element
    {
        temp = temp->next;
    }
    delete temp->next;    // deallocation of memory for the node present at the address stored in last second node ( i.e. delete last node)
    temp->next = nullptr; // so now the second last Node will become last node and will store Null pointer
    return head;          // returning the address of updated linked list
}

int main()
{
    int n;
    cout << "Enter the no. of elements -> ";
    cin >> n;
    int arr[n];
    cout << "Enter the elements -> ";
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }
    Node *head = convert(n, arr); // address of Linked List

    print(head);
    cout << "After deleting Tail :- " << endl;
    head = deleteTail(head);
    print(head);
}
