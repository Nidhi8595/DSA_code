#include <bits/stdc++.h>

using namespace std;

// T.C. -> O(3N + 2N)
// S.C. -> O(N) + O(N)

int trap(vector<int> &arr)
{
    int n = arr.size();
    int left[n], right[n];

    left[0] = arr[0];

    for (int i = 1; i < n; i++)
    {
        left[i] = max(left[i - 1], arr[i]);
    }

    right[n - 1] = arr[n - 1];

    for (int i = n - 2; i >= 0; i--)
    {
        right[i] = max(right[i + 1], arr[i]);
    }

    int ans = 0;
    for (int i = 0; i < n; i++)
    {
        ans += min(left[i], right[i]) - arr[i];
    }

    return ans;
}

int main()
{
    int n;
    cout << "Enter the size of array -> ";
    cin >> n;

    vector<int> arr(n);

    cout << "Enter the elements :- " << endl;
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }

    cout << "The water that can be trapped is -> " << trap(arr) << endl;
}
