#include<iostream>
using namespace std;
int main()
{
    int n;
    int sum=0,i=1;
    cout<<"Enter upto which number you want to find sum?"<<endl;
    cin>>n;
    while(i<=n)
    {
        if(i%2==0)
        {
            sum=sum+i;
        }
        i=i+1;
    }
    cout<<"Sum: "<<sum<<endl;
    return 0;
}
